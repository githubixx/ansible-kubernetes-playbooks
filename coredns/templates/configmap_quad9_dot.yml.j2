---
apiVersion: v1
kind: ConfigMap
metadata:
  name: coredns
  namespace: kube-system
data:
  Corefile: |
    .:53 {
        errors
        health
        kubernetes cluster.local in-addr.arpa ip6.arpa {
          pods insecure
          fallthrough in-addr.arpa ip6.arpa
        }
        forward . tls://9.9.9.9 {
           tls_servername dns.quad9.net
           health_check 10s
        }
        prometheus :9153
        cache 30
        loop
        reload
        loadbalance
    }
